@model IEnumerable<CarwashClient.Models.ServiceVM>

@{
    ViewBag.Title = "Список услуг";
}

<div class="row">
    <h2 style="text-align: center; font-family: sans-serif; font-weight: bold;">Список услуг</h2>

</div>

<table class="table table-striped table-hover mt-3">
    <thead>
        <tr>
            <th class="MainText">Название</th>
            <th class="MainText">Цена</th>
            <th class="MainText">Длительность</th>
            <th class="MainText">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Duration</td>
                <td>
  @*                   <a href="@Url.Action("Edit", "Service", new { id = item.Id })" data-tooltip="Редактировать">
                        <i class="bi bi-pencil fs-1 text-info"></i>
                    </a> *@
                    <a href="@Url.Action("Details", "Services", new { id = item.Id })" data-tooltip="Подробнее" class="ms-2">
                        <i class="bi bi-info-circle fs-1 text-secondary"></i>
                    </a>
                    @*
                    <a href="@Url.Action("Delete", "Service", new { id = item.Id })" data-tooltip="Удалить" class="ms-2">
                        <i class="bi bi-trash fs-1 text-danger"></i>
                    </a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
