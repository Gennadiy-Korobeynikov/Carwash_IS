@model IEnumerable<CarwashClient.Models.EmployeeVM>

@{
    ViewBag.Title = "Список сотрудников";
}

<div class="row">
    <h2 style="text-align: center; font-family: sans-serif; font-weight: bold;">Список сотрудников</h2>

</div>

<table class="table table-striped table-hover mt-3">
    <thead>
        <tr>
            <th class="MainText">Имя</th>
            <th class="MainText">Табельный номер</th>
            <th class="MainText">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.EmployeeNumber</td>
                <td>
                    <a href="@Url.Action("Details", "Employees", new { id = item.Id })" data-tooltip="Подробнее">
                        <i class="bi bi-info-circle fs-1 text-success"></i>
                    </a>
@*                      <a href="@Url.Action("Edit", "Employee", new { id = item.Id })" data-tooltip="Редактировать" class="ms-2">
                         <i class="bi bi-pencil fs-1 text-info"></i>
                     </a> *@
@*                     <a href="@Url.Action("Delete", "Employee", new { id = item.Id })" data-tooltip="Удалить" class="ms-2">
                        <i class="bi bi-trash fs-1 text-danger"></i>
                    </a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
