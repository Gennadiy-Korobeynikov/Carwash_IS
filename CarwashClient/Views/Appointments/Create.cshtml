@model CarwashClient.Models.AppointmentFormVM

@{
    ViewData["Title"] = "Создание записи";
}

<div class="container mt-4">
    <h1 class="mb-4">Создание записи</h1>

    <form asp-action="Create" method="post" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

        <div class="mb-3">
            <label asp-for="Appointment.DateTime" class="form-label"></label>
            <input asp-for="Appointment.DateTime" type="datetime-local" class="form-control" />
            <span asp-validation-for="Appointment.DateTime" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Appointment.ClientId" class="form-label"></label>
            <div class="d-flex align-items-center gap-2">
                <select asp-for="Appointment.ClientId" asp-items="Model.Clients" class="form-select"></select>
                <a asp-controller="Clients" asp-action="Create" class="btn btn-success" title="Добавить клиента">+</a>
            </div>
            <span asp-validation-for="Appointment.ClientId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Appointment.EmployeeId" class="form-label"></label>
            <select asp-for="Appointment.EmployeeId" asp-items="Model.Employees" class="form-select"></select>
            <span asp-validation-for="Appointment.EmployeeId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Appointment.StatusId" class="form-label"></label>
            <select asp-for="Appointment.StatusId" asp-items="Model.Statuses" class="form-select"></select>
            <span asp-validation-for="Appointment.StatusId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Appointment.SpotId" class="form-label"></label>
            <select asp-for="Appointment.SpotId" asp-items="Model.Spots" class="form-select"></select>
            <span asp-validation-for="Appointment.SpotId" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Appointment.ServiceIds" class="form-label"></label>
            <select asp-for="Appointment.ServiceIds" asp-items="Model.Services" class="form-select" multiple size="6"></select>
            <span asp-validation-for="Appointment.ServiceIds" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Создать</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
