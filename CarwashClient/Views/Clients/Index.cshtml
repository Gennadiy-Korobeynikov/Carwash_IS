@model IEnumerable<CarwashClient.Models.ClientVM>

@{
    ViewBag.Title = "Список клиентов";
}

<div class="row">
    <h2 style="text-align: center; font-family: sans-serif; font-weight: bold;">Список клиентов</h2>

    <div class="text-end">
        <a href="@Url.Action("Create", "Clients")" class="round-button bg-green" data-tooltip="Добавить клиента">
            <i class="bi bi-plus-circle"></i>
        </a>
    </div>
</div>

<table class="table table-striped table-hover mt-3">
    <thead>
        <tr>
            <th class="MainText">Телефон</th>
            <th class="MainText">Имя</th>
            <th class="MainText">Фамилия</th>
            <th class="MainText">Отчество</th>
            <th class="MainText">Полное имя</th>
            <th class="MainText">Автомобиль</th>
            <th class="MainText">Предпочтения</th>
            <th class="MainText">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TelNumber</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.MidName</td>
                <td>@item.Name</td>
                <td>@item.CarInfo</td>
                <td>@item.Preferences</td>
                <td>
                    <a href="@Url.Action("Edit", "Clients", new { id = item.Id })" data-tooltip="Редактировать">
                        <i class="bi bi-pencil fs-1 text-info"></i>
                    </a>

                    <a href="@Url.Action("Details", "Clients", new { id = item.Id })" data-tooltip="Подробнее">
                        <i class="bi bi-info-circle fs-1 text-success"></i>
                    </a>

                    <a href="@Url.Action("Delete", "Clients", new { id = item.Id })" data-tooltip="Удалить">
                        <i class="bi bi-trash fs-1 text-danger"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
